edad= int(input ("Ingrese su edad: "))
sexo= (input ("ingrese su genero, 'f' FEMENINO O 'M' MASCULINO: "))

if edad >=18 and sexo.lower()=="f":
    print("puede ingresar")
     
else:
    print("no puede ingresar")

